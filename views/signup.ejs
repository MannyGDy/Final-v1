<%- include('partials/head') %>

<div class="row justify-content-center">
  <div class="col-lg-6">
    <h2 class="fw-bold mb-3">Sign Up</h2>
    <% if (flash.error && flash.error.length) { %>
      <div class="alert alert-danger"><%= flash.error[0] %></div>
    <% } %>
    <% if (flash.success && flash.success.length) { %>
      <div class="alert alert-success"><%= flash.success[0] %></div>
    <% } %>
    <form method="post" action="/signup" class="card p-4 shadow-sm">
      <div class="mb-3">
        <label class="form-label">Full name</label>
        <input type="text" name="fullName" class="form-control" required />
      </div>
      <div class="mb-3">
        <label class="form-label">Company</label>
        <input type="text" name="company" class="form-control" required />
      </div>
      <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" name="email" class="form-control" required />
      </div>
      <div class="mb-3">
        <label class="form-label">Phone number</label>
        <input type="tel" name="phone" class="form-control" required />
      </div>
      <button class="btn btn-primary">Create Account</button>
    </form>
  </div>
  <div class="col-12 mt-3">
    <a href="/" class="text-decoration-none">Back to portal</a>
  </div>
</div>

<%- include('partials/foot') %>


